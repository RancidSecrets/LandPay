


<section class="form__section">
  
  <h1 class="title">Create new Income</h1>
  <form class="form" action="/income" method="POST">
    <input class="input" name="name" type="text" placeholder="Income name" />
    <input class="input"type="number" name="income" placeholder="Amount">
    <input class="input" type="date" name="date" placeholder="dd/mm/yy">
    <input class="input"type="text" maxlength = "150" name="description" placeholder="Description">
    
    <div class="select" style="width: 100%;">
      <select name="placeType" style="width: 100%;">
        <option value="">Category</option>
        {{#each options}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
    </div>
     <button type="submit "class="button">Create</button>
  </form>
<br><br>
</section>


<button onclick="location.href='/'">Home</button>
