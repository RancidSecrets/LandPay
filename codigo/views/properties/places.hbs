{{#each places as |place|}}
<div class="row container">
  <div class="col s6 gray">
    <div class="card">
      {{#each places as |place|}}
      <div class="card-image">
        <img src="{{photo}}" alt="">
        <a class="btn-floating halfway-fab waves-effect waves-light red" href="/places/{{_id}}">
          <i class="material-icons">edit</i>
        </a>
      </div>
      <span class="card-title ">{{name}}</span>
      {{/each}}
    </div>
  </div>
</div>

<div class="card" style="width: 360px; margin: 10px;">
  <div class="card-content">
    <p class="title">
      {{name}}
    </p>
    <img src="{{photo}}">
  </div>
  <footer class="card-footer">
    <p class="card-footer-item">
      <span>
        <a href="/places/{{_id}}">View More and Update</a>
      </span>
    </p>
  </footer>
</div>

{{/each}}





<section>
  <div class="container" style=" border: 2px red solid">
    <input type="button" onclick="changetoIn()" value="Income">
    <input type="button" onclick="changetoEx()" value="Expense">

    <div id="incomeCount" style="display: block; ">
      {{#each income as |in|}}
      <div style="border: 2px royalblue solid; margin: 2px">
        {{name}} <br>
        {{amount}} <br>
        {{date}} <br>
        {{category}} <br>
        {{description}} <br>
        {{place}}
        <br><br>

        <button class="btn" onclick="location.href='/in/delete/{{_id}}'">Delete</button>
        <br><br>
      </div>
      {{/each}}
      <button class="btn" onclick="location.href='/income'">Add</button>
    </div>
    <div id="expenseCount" style="display: none;">
      {{#each expense as |ex|}}
      <div style="border: 2px royalblue solid; margin: 2px">
        {{name}} <br>
        {{amount}}<br>
        {{date}} <br>
        {{category }} <br>
        {{description}} <br>
        {{place}}
        <br><br>
        <button onclick="location.href='/ex/delete/{{_id}}'">X</button>
        <br> <br>
      </div>
      {{/each}}
      <button onclick="location.href='/expense'">+</button>
    </div>
  </div>
</section>
<div style="border: purple 2px solid">

</div>
